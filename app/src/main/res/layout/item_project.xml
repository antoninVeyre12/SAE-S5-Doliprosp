<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project_case"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_show_height"
    android:layout_weight="1"
    android:layout_marginLeft="@dimen/item_show_margin"
    android:layout_marginRight="@dimen/item_show_margin"
    android:layout_marginTop="@dimen/item_show_margin"
    android:layout_marginBottom="@dimen/item_show_margin">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_show_background" />

    <TextView
        android:id="@+id/project_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="30sp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="3"
        android:scrollHorizontally="false"
        android:breakStrategy="simple"
        android:singleLine="false" />


</FrameLayout>