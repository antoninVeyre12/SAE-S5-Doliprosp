<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/salon_case"

    android:layout_width="match_parent"
    android:layout_height="@dimen/item_show_height"
    android:layout_weight="1"
    android:layout_marginLeft="@dimen/item_show_margin"
    android:layout_marginRight="@dimen/item_show_margin"
    android:layout_marginTop="@dimen/item_show_margin"
    android:layout_marginBottom="@dimen/item_show_margin">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_show_background"
         />

    <TextView
        android:id="@+id/salon_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_show_text_margin"
        android:layout_marginBottom="@dimen/item_show_text_margin"
        android:layout_marginLeft="@dimen/item_show_text_margin"
        android:layout_marginRight="@dimen/item_show_text_margin"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:inputType="text"
        android:textColor="@color/black" />


</FrameLayout>