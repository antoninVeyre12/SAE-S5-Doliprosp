<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/salon_case"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_show_height"
    android:layout_marginLeft="@dimen/item_show_margin"
    android:layout_marginRight="@dimen/item_show_margin"
    android:layout_marginTop="@dimen/item_show_margin"
    android:layout_marginBottom="@dimen/item_show_margin">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_show_background" />

    <ImageButton
        android:id="@+id/salon_supprimer"
        android:layout_width="@dimen/ic_height"
        android:layout_height="@dimen/ic_width"
        android:layout_gravity="end|top"
        android:layout_margin="@dimen/item_show_text_margin"
        android:background="@drawable/ic_trash" />

    <ImageButton
        android:id="@+id/salon_modifier"
        android:layout_width="@dimen/ic_height"
        android:layout_height="@dimen/ic_width"
        android:background="@drawable/ic_stylo"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/item_show_text_margin" />

    <TextView
        android:id="@+id/salon_nom"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="70dp"
        android:breakStrategy="simple"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textColor="@color/black"
        android:textSize="@dimen/subtitle_text_size" />

</FrameLayout>
