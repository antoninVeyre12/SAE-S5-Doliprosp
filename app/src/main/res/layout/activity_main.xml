<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_bar_height"
    android:gravity="center"
    android:layout_gravity="bottom"
    android:background="@color/color_secondary"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/nav_bar_item_width"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/nav_bar_img_width"
            android:layout_height="@dimen/nav_bar_img_height"
            android:src="@drawable/ic_show"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/salon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/nav_bar_item_width"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/nav_bar_img_width"
            android:layout_height="@dimen/nav_bar_img_height"
            android:src="@drawable/ic_prospect" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/prospect" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/nav_bar_logo_width"
            android:layout_height="@dimen/nav_bar_logo_height"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/attente" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/nav_bar_item_width"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/nav_bar_img_width"
            android:layout_height="@dimen/nav_bar_img_height"
            android:src="@drawable/ic_project" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/projet" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/nav_bar_item_width"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/nav_bar_img_width"
            android:layout_height="@dimen/nav_bar_img_height"
            android:src="@drawable/ic_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/compte" />
    </LinearLayout>
</LinearLayout>
