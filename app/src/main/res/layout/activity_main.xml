<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:background="@color/color_secondary"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_attente"
                android:layout_width="@dimen/nav_bar_img_width"
                android:layout_height="@dimen/nav_bar_img_height"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/texte_attente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/attente" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/nav_bar_item_width"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_salon"
                android:layout_width="@dimen/nav_bar_img_width"
                android:layout_height="@dimen/nav_bar_img_height"
                android:src="@drawable/ic_show"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/texte_salon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/salons" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/nav_bar_item_width"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_prospect"
                android:layout_width="@dimen/nav_bar_img_width"
                android:layout_height="@dimen/nav_bar_img_height"
                android:src="@drawable/ic_prospect" />

            <TextView
                android:id="@+id/texte_prospect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/prospects" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="@dimen/nav_bar_item_width"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_project"
                android:layout_width="@dimen/nav_bar_img_width"
                android:layout_height="@dimen/nav_bar_img_height"
                android:src="@drawable/ic_project" />

            <TextView
                android:id="@+id/texte_projet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/projets" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/nav_bar_item_width"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_utilisateur"
                android:layout_width="@dimen/nav_bar_img_width"
                android:layout_height="@dimen/nav_bar_img_height"
                android:src="@drawable/ic_user" />

            <TextView
                android:id="@+id/texte_utilisateur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/compte" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


